{
  "name": "seiautomation-electron",
  "private": true,
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run build:main && concurrently -k \"npm:dev:renderer\" \"npm:watch:main\" \"npm:launch:electron\"",
    "dev:renderer": "vite",
    "watch:main": "tsc -p electron/tsconfig.json --watch --preserveWatchOutput",
    "launch:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173 nodemon --watch dist-electron --ext js --exec \"electron dist-electron/main.js\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p electron/tsconfig.json",
    "start": "cross-env NODE_ENV=production electron dist-electron/main.js",
    "package": "npm run build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.5",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.duds4.seiautomation",
    "files": [
      "dist",
      "dist-electron",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
